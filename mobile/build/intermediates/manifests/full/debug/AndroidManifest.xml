<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gdg.iojkuat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="N"
        android:targetSdkVersion="N" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="gdg.iojkuat.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="gdg.iojkuat.Constraint" />
        <!-- This Activity cannot be resized and is always displayed full screen. -->
        <activity
            android:name="gdg.iojkuat.multiwindow.UnresizableActivity"
            android:resizeableActivity="false"
            android:taskAffinity="" />
        !-- This Activity has a default size (750x500dp) with a minimum size
        (500dp at its shortest side). It is launched in the top/end (top/right) corner by default.
        These attributes are defined in the 'layout' tag within an Activity definition. -->
        <activity
            android:name="gdg.iojkuat.multiwindow.MinimumSizeActivity"
            android:launchMode="singleInstance"
            android:taskAffinity="" >
            <layout
                android:defaultHeight="500dp"
                android:defaultWidth="750dp"
                android:gravity="top|end"
                android:minimalHeight="500dp"
                android:minimalWidth="500dp" />
        </activity>
        <!--
          In split-screen mode, this Activity is launched adjacent to another Activity. This is
          controlled via a flag set in the intent that launches this Activity.
        -->
        <activity
            android:name="gdg.iojkuat.multiwindow.AdjacentActivity"
            android:taskAffinity="" />

        <!-- This Activity is launched within an area defined in its launch intent. -->
        <activity
            android:name="gdg.iojkuat.multiwindow.LaunchBoundsActivity"
            android:taskAffinity="" />

        <!--
        This activity handles all configuration changes itself.
        Callbacks for configuration changes are received in 'onConfigurationChanged'.
        -->
        <activity
            android:name="gdg.iojkuat.multiwindow.CustomConfigurationChangeActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:launchMode="singleInstance"
            android:taskAffinity="" />

        <!-- This Activity is launched in a new task without any special flags or settings. -->
        <activity
            android:name="gdg.iojkuat.multiwindow.BasicActivity"
            android:launchMode="singleInstance"
            android:taskAffinity="" />
        <activity android:name="gdg.iojkuat.notification.NotificationActivity" />
        <activity
            android:name="gdg.iojkuat.notification.ActiveNotificationsActivity"
            android:label="@string/app_name" />
        <activity android:name="gdg.iojkuat.scopedaccess.ScopedActivity" />
    </application>

</manifest>